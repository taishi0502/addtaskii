          <li><%= link_to "マイページ", "/users/#{current_user.id}", class: "navlist"%></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "navlist"%></li>
        <% else %>
            <li><%= link_to "ログイン", new_user_session_path, class: "navlist" %></li>
